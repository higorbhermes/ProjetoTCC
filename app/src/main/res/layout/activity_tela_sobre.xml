<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo100"
    android:orientation="vertical"
    tools:context="higorhermes.tcc.projetotcc.View.TelaSobre">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20px"
                app:srcCompat="@drawable/formatura" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                android:text="   O aplicativo Qualif é resultado de um trabalho de conclusão de curso de Bacharelado de Sistemas de Informação do Instituto Federal de Ciência, Tecnologia e Eduacação Fluminense Campus Campos-Centro. Realizado pelos alunos: Aline Alves, Higor Hermes e Luana Mendes, sob a orientação da Profª Maria Alciléia Alves Rocha."
                android:textColor="@android:color/background_light"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
