<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo100"
    tools:context="higorhermes.tcc.projetotcc.View.TelaEscolherAssuntoJogo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45px"
                android:gravity="center"
                android:text="NOVO JOGO"
                android:textColor="@android:color/holo_blue_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ESCOLHA UM ASSUNTO"
                android:textColor="@android:color/background_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25px">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aleatório"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:layout_marginLeft="15px"
                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="História da Qualidade"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:layout_marginLeft="15px"

                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fundamentos de Qualidade"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:layout_marginLeft="15px"
                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Processos de Qualidade"
                    android:layout_marginLeft="15px"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qualidade de Produto e Qualidade do Processo"
                    android:layout_marginLeft="15px"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Métricas de Software"
                    android:layout_marginLeft="15px"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Testes de Software"
                    android:layout_marginLeft="15px"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Norma ISO/IEC 25000"
                    android:layout_marginLeft="15px"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:text="Norma ISO/IEC 15504"
                    android:layout_marginLeft="15px"
                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:text="Modelo CMMi"
                    android:layout_marginLeft="15px"
                    android:textColor="@android:color/background_light" />

                <RadioButton
                    android:id="@+id/radioButton11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/holo_blue_dark"
                    android:text="Modelo MPS.BR"
                    android:layout_marginLeft="15px"
                    android:textColor="@android:color/background_light" />
            </RadioGroup>

            <Button
                android:id="@+id/button_comecar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_marginTop="20px"
                android:background="@android:color/holo_blue_dark"
                android:text="COMEÇAR"
                android:textColor="@android:color/background_light" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
